{
  "name": "lazy-c",
  "displayName": "Lazy C - Advanced C Coding Assistant",
  "description": "Auto semicolons, headers, memory management, compilation and more for C programming",
  "version": "1.0.4",
  "publisher": "MehdiTalalha",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mehdi1-T/Lazy-C-vscode-extension.git"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Snippets"
  ],
  "license": "MIT",
  "keywords": [
    "c",
    "c programming",
    "auto semicolon",
    "header files",
    "gcc",
    "clang",
    "compilation",
    "c helper"
  ],
  "activationEvents": [
    "onLanguage:c"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "panel": [
        {
          "id": "lazy-c",
          "title": "Lazy C",
          "icon": "assets/logo.png"
        }
      ]
    },
    "views": {
      "lazy-c": [
        {
          "icon": "assets/icon.svg",
          "id": "c-helper.libraryReference",
          "name": "C Manual Pages",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "c-helper.compile",
        "title": "Lazy C: Compile Current File"
      },
      {
        "command": "c-helper.openReference",
        "title": "Lazy C: Open Manual Pages",
        "category": "Lazy C"
      },
      {
        "command": "c-helper.searchReference",
        "title": "Lazy C: Search Manual",
        "category": "Lazy C"
      },
      {
        "command": "c-helper.compileAndRun",
        "title": "Lazy C: Compile and Run"
      },
      {
        "command": "c-helper.insertMain",
        "title": "Lazy C: Insert Main Function"
      },
      {
        "command": "c-helper.generateDoc",
        "title": "Lazy C: Generate Function Documentation"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "c-helper.compile",
          "when": "editorLangId == c"
        },
        {
          "command": "c-helper.compileAndRun",
          "when": "editorLangId == c"
        },
        {
          "command": "c-helper.insertMain",
          "when": "editorLangId == c"
        },
        {
          "command": "c-helper.generateDoc",
          "when": "editorLangId == c"
        }
      ]
    },
    "keybindings": [
      {
        "command": "c-helper.compile",
        "key": "ctrl+shift+b",
        "when": "editorLangId == c"
      },
      {
        "command": "c-helper.compileAndRun",
        "key": "ctrl+shift+r",
        "when": "editorLangId == c"
      },
      {
        "command": "c-helper.insertMain",
        "key": "ctrl+shift+m",
        "when": "editorLangId == c"
      },
      {
        "command": "c-helper.generateDoc",
        "key": "ctrl+shift+d",
        "when": "editorLangId == c"
      }
    ],
    "configuration": {
      "title": "C Helper",
      "properties": {
        "c-helper.autoSemicolon": {
          "type": "boolean",
          "default": true,
          "description": "Automatically insert semicolons at end of lines"
        },
        "c-helper.autoHeaders": {
          "type": "boolean",
          "default": true,
          "description": "Automatically include required header files"
        },
        "c-helper.warningLevel": {
          "type": "string",
          "enum": ["low", "medium", "high"],
          "default": "medium",
          "description": "Level of warnings for unsafe code"
        },
        "c-helper.compilerPath": {
          "type": "string",
          "default": "gcc",
          "description": "Path to GCC compiler"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "watch-tests": "tsc -watch -p ./ --outDir out",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "typescript": "^5.1.6"
  }
}
